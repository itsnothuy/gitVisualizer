{
  "name": "git-viz",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:https": "next dev --turbopack --experimental-https",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest --pool=forks",
    "test:e2e": "playwright test",
    "test:parity": "tsx scripts/git-parity.ts",
    "test:goldens": "RECORD_GOLDENS=true playwright test e2e/lgb-goldens.spec.ts",
    "lighthouse": "lhci autorun",
    "validate": "pnpm typecheck && pnpm lint && pnpm test --run && pnpm build",
    "clean": "rm -rf .next node_modules/.cache",
    "reset": "rm -rf node_modules pnpm-lock.yaml .next && pnpm install"
  },
  "dependencies": {
    "@isomorphic-git/lightning-fs": "^4.6.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "comlink": "^4.4.2",
    "d3-dag": "^1.1.0",
    "elkjs": "^0.11.0",
    "isomorphic-git": "^1.34.0",
    "lucide-react": "^0.545.0",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.64.0",
    "react-zoom-pan-pinch": "^3.7.0",
    "tailwind-merge": "^3.3.1",
    "web-worker": "^1.5.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^15.5.5",
    "@playwright/test": "^1.56.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.4",
    "axe-core": "^4.11.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "jsdom": "^22.0.0",
    "lighthouse": "^13.0.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.1"
  }
}